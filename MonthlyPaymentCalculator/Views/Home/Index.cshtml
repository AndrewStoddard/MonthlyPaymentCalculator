@model MonthlyPaymentModel
@{
    ViewData["Title"] = "Andrew Stoddard Monthly Payment Calculator";
}

<div class="container">
    <header class="jumbotron" style="background-color:darkcyan">
        <span class="mt-3" style="font-size: xx-large; color:white;">
            <i class="fas fa-car">&nbsp;@ViewBag.Title</i>
        </span>
        
    </header>
    <main>
        <form asp-action="Index" method="post" class="form-horizontal">
            <div class="row">
                <label asp-for="PurchasePrice" class="control-label col-3">
                    Purchase Price:
                </label>
                <input asp-for="PurchasePrice" class="form-control col-3" />
                <span asp-validation-for="@Model.PurchasePrice" class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="InterestRate" class="control-label col-3">
                    Interest Rate:
                </label>
                <input asp-for="InterestRate" class="form-control col-3" />
                <span asp-validation-for="@Model.InterestRate" class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="Years" class="control-label col-3">
                    Number of Years:
                </label>
                <input asp-for="Years" class="form-control col-3" />
                <span asp-validation-for="@Model.Years" class="text-danger col"></span>
            </div>
            <div class="row">
                <label class="control-label col-3">Monthly Payment:</label>
                <input value="@ViewBag.MonthlyPayment" readonly
                       class="form-control col-3" />
            </div>
            <div class="row">
                <div class="col offset-sm-3 pl-0">
                    <button type="submit" class="btn btn-primary">
                        Calculate
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>
    </main>
</div>
